<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="top"
    android:id="@+id/swipe_preferinte">
    <!-- Bottom View Start-->
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/accentColor"
        android:id="@+id/bottom_wrapper"
        android:layout_width="120dp"
        android:weightSum="1"
        android:layout_height="match_parent">
        <!--What you want to show-->

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/accentColor"
            android:id="@+id/deleteFrame">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_white_24dp"
                android:layout_gravity="center" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/yellow_low"
            android:id="@+id/editFrame">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:layout_gravity="center"
                />

        </FrameLayout>

    </LinearLayout>
    <!-- Bottom View End-->

    <!-- Surface View Start -->
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--What you want to show in SurfaceView-->
        <com.asadmshah.materiallistitem.TwoLineAvatarWithTextAndIconView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:textColorForTitle="#000"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:id="@+id/list_item_preferinta"/>

    </LinearLayout>
    <!-- Surface View End -->
</com.daimajia.swipe.SwipeLayout>